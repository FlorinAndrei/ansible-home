//
// Do any local configuration here
//

// Consider adding the 1918 zones here, if they are not used in your
// organization
//include "/etc/bind/zones.rfc1918";

zone "home.local" {
  type master;
  file "/etc/bind/home.local";
};

zone "{{ local_net_prefix_reverse }}.in-addr.arpa" {
  type master;
  file "/etc/bind/home.local.reverse";
};

zone "rpz" {
  type master;
  file "/etc/bind/db.rpz";
};
