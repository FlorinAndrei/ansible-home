network:
  version: 2
  renderer: networkd
  ethernets:
    eth0:
      addresses:
        - {{ local_net_prefix }}.2/24
      routes:
        - to: default
          via: {{ local_net_prefix }}.254
      nameservers:
          search: [{{ local_domain }}]
          addresses: [{{ local_net_prefix }}.254]
